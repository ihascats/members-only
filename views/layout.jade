doctype html
html
  head
    title Forum
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    div(class='wrapper')
      aside 
        nav 
          ul 
            div 
              a(href="/")
                li Forum
              if (currentUser)
                a(href=`/user-${currentUser._id}` )
                  li Profile
            div 
              if (currentUser)
                a(href="/log-out")
                  li= `Log out ${currentUser.username}`
              else 
                a(href="/log-in")
                  li Log In 
                a(href="/sign-up")
                  li Sign Up 
      div(class='content')
        block content
